<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.falesieinitalia">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_app1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_app1_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FalesieInItalia"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.FalesieInItalia.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DescrizioneFalesia"
            android:theme="@style/Theme.FalesieInItalia.NoActionBar"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Info" />
        <activity
            android:name=".ListaFalesie"
            android:theme="@style/Theme.FalesieInItalia.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.FalesieInItalia.NoActionBar"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>